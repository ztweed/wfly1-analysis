%this function takes a neuron skeleton and a connector list and filters out
%  nodes that aren't within a specified distance of a synapse

function[connids] = filter_glom(skelid, connslist)

clc

connfields = fieldnames(connslist);

connids = zeros(1, length(connfields));

%skelid = str2num(neuronskeleton{2:end});

%this loop retreives the list of both pre- and post-synaptic connectors
%   attached to the input neuron

for i = 1:length(connfields)
    c = connslist.(connfields{i});
    
    if isempty(c.pre) || isempty(c.post)
        
    else
        if ismember(skelid, c.pre) || ismember(skelid, c.post)
            
            connids(1, i) = str2num(connfields{i}([5,7:end]));
        else
        end
    end
end

connids(connids == 0) = [];

